{
  "name": "budget-app",
  "version": "0.9.5",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "server:dev": "pnpm --filter @budget-app/server dev",
    "server:build": "pnpm --filter @budget-app/server build",
    "server:start": "pnpm --filter @budget-app/server start",
    "dev": "node scripts/dev.js",
    "build": "next build",
    "start": "node scripts/start.js",
    "lint": "eslint",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "cap:sync": "npx cap sync",
    "cap:ios": "npx cap sync ios && npx cap open ios",
    "cap:android": "npx cap sync android && npx cap open android",
    "build:server:bundle": "esbuild packages/server/src/index.ts --bundle --platform=node --target=node20 --format=esm --outfile=dist/standalone/api-server/index.mjs --external:@electric-sql/pglite",
    "build:installer": "node installer/build-installer.js",
    "build:installer:quick": "node installer/build-installer.js --skip-build",
    "build:standalone": "node installer/build-installer.js --skip-inno",
    "build:linux": "node installer/build-cross-platform.js --platform linux",
    "build:linux:quick": "node installer/build-cross-platform.js --platform linux --skip-build",
    "build:darwin": "node installer/build-cross-platform.js --platform darwin",
    "build:darwin:quick": "node installer/build-cross-platform.js --platform darwin --skip-build",
    "build:all": "node installer/build-installer.js --skip-inno && node installer/build-cross-platform.js --platform linux --skip-build && node installer/build-cross-platform.js --platform darwin --skip-build"
  },
  "dependencies": {
    "@capacitor/core": "^8.0.2",
    "@clerk/nextjs": "^6.36.10",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@electric-sql/pglite": "^0.3.15",
    "@supabase/supabase-js": "^2.93.3",
    "d3": "^7.9.0",
    "d3-sankey": "^0.12.3",
    "drizzle-orm": "^0.45.1",
    "next": "16.1.1",
    "postgres": "^3.4.8",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^8.0.2",
    "@tailwindcss/postcss": "^4",
    "@types/d3": "^7.4.3",
    "@types/d3-sankey": "^0.12.5",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.8",
    "esbuild": "^0.27.3",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
