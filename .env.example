# Teller API Configuration
TELLER_APP_ID=your_teller_app_id_here
NEXT_PUBLIC_TELLER_APP_ID=your_teller_app_id_here
TELLER_CERTIFICATE_PATH=./certificates/certificate.pem
TELLER_PRIVATE_KEY_PATH=./certificates/private_key.pem
TELLER_ENVIRONMENT=production

# Clerk API Configuration (required for remote/cloud mode JWT verification)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_secret_key_here
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up

# Local Database Configuration (PGlite)
# Path where the local database files are stored. Default: ./data/budget-local
PGLITE_DB_LOCATION=./data/budget-local

# Cloud Database Configuration (for cloud sync)
DATABASE_URL=postgresql://postgres.xxx:password@aws-0-us-east-1.pooler.supabase.com:6543/postgres

# Sync Configuration
# How often to auto-sync with cloud (in milliseconds). Default: 300000 (5 minutes)
NEXT_PUBLIC_SYNC_INTERVAL_MS=300000

# Server Configuration
# Port for the Next.js web client. Default: 3000
SERVER_PORT=3000
# Port for the Hono API server. Default: 3001
API_PORT=3001
